---
const {
  href,
  variant = "primary",
  size = "md",
} = Astro.props;
---

{href ? (
  <a href={href} class={`btn ${variant} ${size}`}>
    <slot />
  </a>
) : (
  <button class={`btn ${variant} ${size}`}>
    <slot />
  </button>
)}

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;

    padding: 0.6rem 1.2rem;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;

    border: none;
    cursor: pointer;
    transition:
      background-color 0.2s ease,
      transform 0.1s ease,
      box-shadow 0.1s ease;
  }

  /* Variants */
  .primary {
    background: #2563eb;
    color: white;
  }

  .primary:hover {
    background: #1d4ed8;
  }

  .secondary {
    background: #e5e7eb;
    color: #111827;
  }

  .secondary:hover {
    background: #d1d5db;
  }

  .ghost {
    background: transparent;
    color: #2563eb;
  }

  .ghost:hover {
    background: rgba(37, 99, 235, 0.1);
  }

  /* Sizes */
  .sm {
    padding: 0.4rem 0.75rem;
    font-size: 0.875rem;
  }

  .md {
    font-size: 1rem;
  }

  .lg {
    padding: 0.8rem 1.5rem;
    font-size: 1.125rem;
  }

  /* Interaction */
  .btn:active {
    transform: translateY(1px);
  }

  .btn:focus-visible {
    outline: 2px solid #2563eb;
    outline-offset: 2px;
  }
</style>
